@using CMS.Model;

@if (Items?.Count >0)
{
    <div class="card mainCard mb-2 mt-5">
        <h5 class="card-header" >مطالب مرتبط</h5>
        <div class="card-body">
            <div class="row">
                @foreach (var item in Items)
                {
                    <article class="col-lg-4 col-md-6 col-sm-12 d-flex align-items-stretch">
                        <div class="card my-4 mx-4">
                            <div style="height: 150px">
                                <NavLink href='@($"{Link.Default()}/{item.Alias}")'>
                                    <img src="@Model.Files.Item.GetThumbnail(item.Img)" class="card-img-top" alt="@item.Title">
                                </NavLink>
                            </div>
                            <div class="card-body">
                                <h2 class="card-title text-center h6">
                                    <NavLink href='@($"{Link.Default()}/{item.Alias}")'>
                                        @item.Title
                                    </NavLink>
                                </h2>

                            </div>
                        </div>
                    </article>
                }

            </div>
        </div>
    </div>
}


@code {
    [Parameter]
    public List<CMS.Model.Post> Items { get; set; }
    [Parameter]
    public string? Link { get; set; }
}
