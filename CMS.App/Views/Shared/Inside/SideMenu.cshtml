@using CMS.Model
@model Status

<div class="sideMenu col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark text-white">
    <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
        <div class="text-center w-100 " style="margin-top:70px">
            CMS
        </div>
        <hr class="w-100 " />
        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start w-100" id="menu">

            <li class="nav-item w-100">
                <a href="cmd-admin" class="nav-link d-flex">
                    <span class="svgHome bg-white"></span> <span class="ms-3 d-none d-sm-inline">صفحه اصلی</span>
                </a>
            </li>

            <li class="nav-item w-100 mt-2">
                <a href="cmd-admin/post" class="nav-link d-flex">
                    <span class="svgPost bg-white"></span> <span class="ms-3 d-none d-sm-inline">مطلب</span>
                </a>
            </li>

            <li class="nav-item w-100 mt-2">
                <a href="cmd-admin/comment" class="nav-link d-flex">
                    <span class="svgMessage bg-white"></span> <span class="ms-3 d-none d-sm-inline">
                        نظر
                        @if (Model.CountComment > 0)
                        {
                            <span class="translate-middle badge rounded-pill bg-danger">@Model.CountComment</span>
                        }
                    </span>
                </a>
            </li>


            <li class="nav-item w-100 mt-2">
                <a href="cmd-admin/menu" class="nav-link d-flex">
                    <span class="svgMenu bg-white"></span> <span class="ms-3 d-none d-sm-inline">منو</span>
                </a>
            </li>

            <li class="nav-item w-100 mt-2">
                <a href="cmd-admin/file-manager" class="nav-link d-flex">
                    <span class="svgGalleryImport bg-white"></span> <span class="ms-3 d-none d-sm-inline">فایل</span>
                </a>
            </li>

            <li class="nav-item w-100 mt-2">
                <a href="cmd-admin/setting" class="nav-link d-flex">
                    <span class="svgSetting bg-white"></span> <span class="ms-3 d-none d-sm-inline">ابزار</span>
                </a>
            </li>

            <li class="nav-item w-100 mt-2">
                <a href="cmd-admin/message" class="nav-link d-flex">
                    <span class="svgMessage bg-white"></span> <span class="ms-3 d-none d-sm-inline">
                        پیام
                        @if (Model.CountMessage > 0)
                        {
                            <span class="translate-middle badge rounded-pill bg-danger">@Model.CountMessage</span>
                        }
                    </span>
                </a>
            </li>

            <li class="nav-item w-100 mt-2">
                <a href="cmd-admin/order" class="nav-link d-flex">
                    <span class="svgSetting bg-white"></span> <span class="ms-3 d-none d-sm-inline">
                        سفارش
                        @if (Model.CountOrder > 0)
                        {
                            <span class="translate-middle badge rounded-pill bg-danger">@Model.CountOrder</span>
                        }
                    </span>
                </a>
            </li>

        </ul>
    </div>
</div>